<h1>
		{{title}}
</h1>
<p>
	Welcome to {{sitename}}! Below you'll find a list of the greatest books in the whole world. Feel free to add your favorites to the list!
</p>

<section>
	<h2>Great Books</h2>
	
    {{#if message}}
    	{{message}}
	{{/if}}
	
	<form method="POST">
		<label>Add a book
			<input name="title" placeholder="Book title">
		</label>
		<button type="submit">Send!</button>
	</form>

	<ul>
		{{#each books}}
			<li>{{title}}</li>
			{{/each}}
	</ul>
</section>